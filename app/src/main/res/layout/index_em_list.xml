<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/emtext_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_a"
            android:gravity="center"
            android:text="物资管理"
            />

        <TextView
            android:id="@+id/emtext_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_b"
            android:gravity="center"
            android:text="志愿者"
            />

        <TextView
            android:id="@+id/emtext_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_c"
            android:gravity="center"
            android:text="应急救援"
            />

        <TextView
            android:id="@+id/emtext_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_d"
            android:gravity="center"
            android:text="物资调度" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widget_size_10"
        >

        <TextView
            android:id="@+id/emtext_e"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_e"
            android:gravity="center"
            android:text="应急预案" />

        <TextView
            android:id="@+id/emtext_f"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_f"
            android:gravity="center"
            android:text="一键救援"
            />

        <TextView
            android:id="@+id/emtext_g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_g"
            android:visibility="gone"
            android:gravity="center"
            android:text="处置报告" />

        <TextView
            android:id="@+id/emtext_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_center"
            android:drawableTop="@drawable/em_h"
            android:gravity="center"
            android:text="应急小程序" />
    </LinearLayout>

</LinearLayout>